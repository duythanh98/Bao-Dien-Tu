<div class="card shadow">
  <h4 class="card-header">
    Bài viết chờ duyệt
  </h4>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" width="5%">ID</th>
          <th scope="col" width="20%">Tiêu đề</th>
          <th scope="col" width="10%">Tác giả</th>
          <th scope="col" width="15%">Chuyên mục</th>
          <th scope="col" width="15%">Ngày tạo</th>
          <th scope="col" width="15%">Thao tác</th>
        </tr>
      </thead>
      <tbody>
        {{#each drafts}}
        <tr>
          <td>{{IDBlog}}</td>
          <td>{{Tittle}}</td>
          <td>{{Auth}}</td>
          <td>{{NameCategory}}</td>
          <td>{{DateProduct}}</td>
          <td class="text-center">
            <a href="/editor/{{IDBlog}}" class="btn btn-outline-primary" role="button">
              <i class="fas fa-eye"></i>
            </a>
            <a href="/editor/accept/{{IDBlog}}" class="btn btn-outline-success" role="button">
              <i class="fas fa-check-square"></i>
            </a>
            <a href="/editor/refuse/{{IDBlog}}" class="btn btn-outline-danger" role="button">
              <i class="fas fa-exclamation-circle"></i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>