<div class="card shadow">
  <h4 class="card-header">
    Edit Category
  </h4>
  <div class="card-body">
    {{#if this.error}}
    <div class="alert alert-danger" role="alert">
      Invalid categoryId.
      <a href="/admin/categories" class="alert-link">Go Back</a>
    </div>
    {{else}}
    <form method="POST" action="/admin/categories/edit/update">
      <div class="form-group">
        <label for="txtCatID">#</label>
        <input readonly type="text" class="form-control" id="txtCatID" name="IDCategory" value="{{this.category.IDCategory}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Category</label>
        <input type="text" class="form-control" id="txtCatName" name="NameCategory" autofocus
          value="{{this.category.NameCategory}}" placeholder="Enter category name">
      </div>
      <a class="btn btn-primary" href="/admin/categories" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-danger" formaction="/admin/categories/delete">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
    {{/if}}
  </div>
</div>