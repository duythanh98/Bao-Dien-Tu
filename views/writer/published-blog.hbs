<div class="card shadow">
  <h4 class="card-header">
    Bài viết đã xuất bản
  </h4>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" width="10%">ID</th>
          <th scope="col" width="30%">Tiêu đề</th>
          <th scope="col" width="25%">Ngày đăng</th>
          <th scope="col" width="25%">Ngày tạo</th>
        </tr>
      </thead>
      <tbody>
        {{#each blogs}}
        <tr>
          <td>{{idblog}}</td>
          <td>{{tittle}}</td>
          {{#if dateproduct}}
          <td>{{moment dateproduct format="DD/MM/YYYY hh:mm:ss"}}</td>
          {{else}}
          <td>{{datepublic}}</td>
          {{/if}}
          <td>{{moment datepublic format="DD/MM/YYYY hh:mm:ss"}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>