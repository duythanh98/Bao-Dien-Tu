<div class="card shadow">
    <h4 class="card-header">Danh sách tất cả bài viết</h4>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="text-center" scope="col">ID Blog</th>
                 <th scope="col">Tiêu đề</th>
                 <th scope="col">Tóm tắt</th>
                <th scope="col">Tác giả</th>
                 <th scope="col">Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.listblogs}}
            <tr>
                <th class="text-center" scope="row">{{IDBlog}}</th>
                 <td>{{Tittle}}</td>
                 <td>{{SortContext}}</td>
                 <td>{{Username}}</td>
                 <td>{{#if_e this.Status 0}}Draft{{/if_e}} {{#if_e Status 1}}Xuất bản{{/if_e}} </td> 
                <td class="text-right">
                    <a class="btn btn-primary" href="/admin/manageblogs/view/{{IDBlog}}" role="button">
                        Chi tiết
                    </a>
                </td>
            </tr>
            {{/each}}
            
        </tbody>

        
    </table>
</div>