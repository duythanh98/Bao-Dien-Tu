<div class="card shadow">
  <h4 class="card-header">
    Chỉnh sửa chuyên mục
  </h4>
  <div class="card-body">
    {{#if this.error}}
    <div class="alert alert-danger" role="alert">
      Invalid categoryId. <a href="/admin/categories" class="alert-link">Go back</a>.
    </div>
    {{else}}
    <form method="POST" action="/admin/percategory/update/{{name}}">
      <div class="form-group">
        <label for="txtCatID">ID Editor</label>
        <input readonly type="text" class="form-control" id="txtCatID" name="IDUser" value="{{id}}">
     
     <div class="input-group mb-3">
             <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Chọn chuyên mục</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01" name="NameCategory">
             <option selected>{{name}}</option>
             {{#each this.editchuyenmuc}}
             <option >{{NameCategory}}</option>
             
             {{/each}}
            </select>
    </div>
     </div>
       
      <a class="btn btn-primary" href="/admin/percategory/view/{{id}}" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-outline-danger" formaction="/admin/percategory/delete">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Update
      </button>
    </form>
    {{/if}}
  </div>
</div>